<h1>Listings Search</h1>

  <% @listings.each do |listing| %>
    
     
      <table>
        <h3><%= link_to listing.name, controller: "listings", action: "show", id: listing.id%></h3>
          <p class="search-bullets">Host : <%= listing.user.profile.name%></p>
          <p class="search-bullets">Location : <%= listing.city%></p>
          <p class="search-bullets">Max number of people : <%= listing.accommodates%></p>
          <p class="search-bullets">Price per night : USD <%= listing.price_per_night%></p>
        

      
    
  <% end %>
<div class="col-sm-3 col-md-3 pull-right">
        <form class="navbar-form" role="search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
        </form>
        </div>


 